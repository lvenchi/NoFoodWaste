<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_orange</item>
        <item name="android:fontFamily">@font/productsans_regular</item>
        <item name="editTextColor">@color/color_green_text</item>

    </style>


    <style name="materialCalendarStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
        <item name="android:datePickerStyle">@style/myDatePickerStyle</item>
        <item name="materialCalendarHeaderLayout">@style/materialCalendarStyle.headerLayout</item>
        <item name="materialCalendarHeaderTitle">@style/materialCalendarStyle.headerTitleStyle</item>
        <item name="materialCalendarHeaderConfirmButton">@style/my.HeaderConfirmButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/my.HeaderCancelButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/my.HeaderConfirmButton</item>

        <!--<item name="materialCalendarHeaderSelection">@style/myHeaderSelectionStyle</item> START END DATE-->
    </style>

    <style name="myHeaderSelectionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_orange</item>
    </style>

    <style name="headerConfirmButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_green_text</item>
        <item name="rippleColor">@color/color_green_toolbar</item>
    </style>

    <style name="materialCalendarStyle.headerTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="materialCalendarStyle.headerLayout" parent="android:Widget">
        <item name="android:background">@color/color_green_toolbar</item>
    </style>

    <style name="Custom_MaterialCalendar.Fullscreen" parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
        <item name="daySelectedStyle">@style/selectedDayStyle</item>
        <item name="yearSelectedStyle">@style/materialCalendarStyle.headerTitleStyle</item>
        <item name="android:textColor">@color/color_orange</item>
        <!--<item name="android:buttonBarPositiveButtonStyle">@style/buttonsCalendar</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/buttonsCalendar</item>-->
    </style>

    <style name="myDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">


    </style>

    <style name="my.HeaderConfirmButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_green_toolbar</item>

        <item name="rippleColor">@color/color_green_toolbar</item>
        <item name="android:ellipsize">none</item>
        <item name="android:paddingStart">-20dp</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="myTextApp" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="my.HeaderCancelButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_green_toolbar</item>
        <item name="rippleColor">@color/color_green_toolbar</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <style name="selectedDayStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/color_green_toolbar</item>
    </style>

    <style name="buttonsCalendar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:color">@color/color_green_toolbar</item>
    </style>


</resources>
