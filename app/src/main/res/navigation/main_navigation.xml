<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginPage">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.nofoodwaste.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" />
    <fragment
        android:id="@+id/loginPage"
        android:name="com.example.nofoodwaste.LoginPage"
        android:label="FragmentLogin"
        tools:layout="@layout/fragment_login_page">
        <action
            android:id="@+id/action_fragmentSignup_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_fragmentLoginPage_to_registerPage"
            app:destination="@id/registerPage" />
    </fragment>
    <fragment
        android:id="@+id/registerPage"
        android:name="com.example.nofoodwaste.RegisterPage"
        android:label="fragment_register_page"
        tools:layout="@layout/fragment_register_page" />
</navigation>